{
	"parser": "@typescript-eslint/parser",
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"airbnb",
		"plugin:prettier/recommended"
	],
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".tsx"
				]
			}
		],
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": [
					"stories/**"
				],
				"optionalDependencies": false
			}
		],
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": "error"
	},
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".tsx"]
      }
    }
  }
}